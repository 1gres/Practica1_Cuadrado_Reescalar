#version 330 core

in vec3 ourColor;
in vec2 TexCoord;

// Ouput data
out vec4 color;

//Creem les 2 textures
uniform sampler2D Texture1;
uniform sampler2D Texture2;
uniform float Transparencia;

void main()
{
	//textures
	color = mix(texture(Texture1, TexCoord), texture(Texture2, TexCoord), Transparencia);
	//color = vec4 (ourColor,1.0f);
	//color = texture(Texture2, TexCoord); //Printar 1 sola textura
}